<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TodoApp</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <button class="newTodo"><p>+</p></button>
        <div class="header">
            <h2 class="title" style="margin-top: 2rem;">TodoApp</h2>
        </div>
        <div class="todoList">
            <% data.forEach((todo, index) => { %>
                <!--  -->
                <div class="item">
                    <div class="header">
                        <span class="sNo"><%= index + 1 %>.</span>
                        <p class="todoTitle <%= todo.complete? 'completed' : '' %>"><%= todo.title %></p>
                    </div>
                    <div class="body">
                        <div class="options">
                            <h2 class="toggleBtn">...</h2>
                            <div class="optionDropdown">
                                <div class="edit" style="margin-top: 5px;" >
                                    <a class="btnEdit" href="/edit/<%= todo.id %>">Edit</a>
                                </div>

                                <form action="/delete" method="post" class="delete">
                                    <input type="hidden" name="id" value="<%= todo.id %>">
                                    <button class="btnDelete" type="submit" >Delete</button>
                                </form>

                                <form action="/changeStatus/<%= todo.id %>" method="post" class="complete" >
                                    <input type="hidden" value="<%= todo.complete %>" name="complete">
                                    <button class="btnCompleted" type="submit" >Complete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!--  -->
            <% }) %>
        </div>
        <div class="selectMenu">
            <a href="/active" class="mmenu">Active</a>
            <a href="/" class="mmenu" style="margin-left: 15px;">All</a>
            <a href="/completed" class="mmenu" style="margin-left: 15px;">Completed</a>
        </div>
    </div>

    <div class="newTodoContainer show">
        <div class="newTodoWrapper">
            <p class="closeBtn">X</p>
            <div class="header">
                <p class="title" style="color: #89929b; margin: 2.5rem 0 2rem 0;"></p>
            </div>
            <form action="/update/<%= oldTodo.id %>" method="post" style="width: 90%; margin-left: 15%;">
                <input id="todoData" value="<%= oldTodo.title %>" name="title" placeholder="Enter Todo" width="110%">
                <button type="submit" class="submitForm" style="margin-left: 25%;">Submit</button>
            </form>
        </div>
    </div>
    <script src="/script.js"></script>
</body>
</html>